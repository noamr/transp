{
  "name": "transp",
  "version": "1.0.0",
  "description": "Transparent client-side transpiler",
  "main": "dist/cjs/index.js",
  "repository": "git@github.com:noamr/transp.git",
  "author": "Noam Rosenthal <noam.j.rosenthal@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build:browser": "esbuild --target=es2015 --minify ./src/index.browser.ts --outfile=dist/browser/index.js --sourcemap --bundle",
    "build:node": "esbuild --target=node12 --bundle --external:@babel/standalone --external:uuid ./src/index.node.ts --outfile=dist/cjs/index.js --sourcemap",
    "build": "npm run build:node && npm run build:browser",
    "test": "npm run build && npm run jest --runInBand"
  },
  "devDependencies": {
    "@types/express": "^4.17.11",
    "@types/get-port": "^4.2.0",
    "@types/jest": "^26.0.20",
    "@types/jest-environment-puppeteer": "^4.4.1",
    "@types/puppeteer": "^5.4.2",
    "@types/uuid": "^8.3.0",
    "esbuild": "^0.8.36",
    "express": "^4.17.1",
    "get-port": "^5.1.1",
    "jest": "^26.6.3",
    "jest-puppeteer": "^4.4.0",
    "puppeteer": "^5.5.0",
    "source-map": "^0.7.3",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "@babel/standalone": "^7.12.12",
    "uuid": "^8.3.2"
  }
}
